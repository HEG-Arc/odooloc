<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Add OdooSIM banner style -->
    <template id="opensim.assets_backend" inherit_id="web.assets_backend" name="OdooSIM banner">
        <xpath expr="link[last()]" position="after">
            <link rel="stylesheet" type="text/css" href="/opensim/static/src/css/banner.css"/>
        </xpath>
    </template>
    <template id="opensim.assets_common" inherit_id="web.assets_common" name="OdooSIM Common Assets">
        <xpath expr="script[last()]" position="after">
            <script type="text/javascript" src="/opensim/static/src/js/banner.js"></script>
            <script type="text/javascript" src="/opensim/static/src/js/simulation_time.js"></script>
        </xpath>
    </template>
    <!-- Add OdooSIM banner after web_client top menu -->
    <!-- disable python qweb template as we have web client Widget now
      - see opensim.js_banner in static templates.xml
    <template id="opensim_banner" inherit_id="web.webclient_bootstrap" name="OdooSIM banner">

        <xpath expr="//nav[@id='oe_main_menu_navbar']" position="after">
            <div id="os_banner">
                <span class="os_logo">OdooSIM</span>
                <t t-if="request.uid">
                    <span class="os_team">TEAM
                    <t t-esc="request.env.user.company_id.name"/></span>
                </t>
                <span class="os_spacer"></span>
                <t t-set="active" t-value="request.env['opensim.opensim'].search([('state','in',['running','paused'])])"/>
                <t t-if="active">
                    <span class="os_day">
                        <i class="fa fa-calendar"></i>
                        <t t-esc="active.today()"></t>
                    </span>
                    <span class="os_clock">
                        <i class="fa fa-clock-o"></i>
                        <t t-esc="active.duration"></t>
                    </span>
                </t>
            </div>
        </xpath>
    </template>
