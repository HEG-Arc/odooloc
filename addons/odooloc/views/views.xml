<odoo>
    <!--    Enable locations by default-->
    <record model="res.config.settings" id="odooloc.locations_settings">
        <field name="group_stock_multi_locations" eval="True"/>
    </record>

    <function model="res.config.settings" name="execute">
        <!-- ids = -->
        <value eval="[ref('odooloc.locations_settings')]"/>
        <!-- context = -->
        <value eval="{}"/>
    </function>


    <!--    Enable traceability for products-->
    <record model="res.config.settings" id="odooloc.traceability_settings">
        <field name="group_stock_production_lot" eval="True"/>
    </record>

    <function model="res.config.settings" name="execute">
        <!-- ids = -->
        <value eval="[ref('odooloc.traceability_settings')]"/>
        <!-- context = -->
        <value eval="{}"/>
    </function>


    <!--    Add useful fields to product form view-->
    <record id="view_product_form_inherit" model="ir.ui.view">
        <field name="name">product.template.common.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <!--    Add rental checkbox to product view-->
            <xpath expr="//field[@name='purchase_ok']/following-sibling::label[1]" position="after">
                <div>
                    <field name="rental"/>
                    <label for="rental"/>
                </div>
            </xpath>
            <!--    Add field for product rental price-->
            <xpath expr="//page[@name='sales']" position="after">
                <page string="Rentals" name="rentals">
                    <group>
                        <group name="group_rental_price_unit">
                            <field name="rental_price_unit"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>


    <!--    Add custom field to link a rentable product to an equipment-->
    <record id="hr_equipment_view_form_inherit" model="ir.ui.view">
        <field name="name">equipment.form.inherit</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='warranty']" position="after">
                <field name="odooloc_reference_product_id"/>
            </xpath>
        </field>
    </record>

    <!--    Create rental orders form-->
    <record id="odooloc_rental_orders_form" model="ir.ui.view">
        <field name="name">odooloc.order.form</field>
        <field name="model">odooloc.order</field>
        <field name="arch" type="xml">
            <form string="Rental Order">
                <header>
                    <button name="action_confirm" states="draft" string="Confirm order" type="object"
                            context="{'confirm':True}" class="oe_highlight"/>
                    <button name="action_cancel" states="draft,confirm" string="Cancel" type="object"
                            context="{'cancel':True}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent" readonly="1"/>
                </header>

                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label" attrs="{'invisible': [('state','in',('draft','sent'))]}">
                            Rental order
                        </span>
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('customer','=',True)]"
                                   context="{'search_default_customer':1, 'show_address': 1, 'show_vat': True}"
                                   options='{"always_reload": True}'/>
                            <field name="date_order"/>
                        </group>
                        <group>
                            <field name="date_start" options='{"always_reload": True}'/>
                            <field name="date_end" options='{"always_reload": True}'/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Order Lines" name="order_lines">
                            <field name="order_line" attrs="{'readonly': [('state', 'in', ('confirm', 'cancel'))]}">
                                <tree string="Purchase Order Lines" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id" force_save="1"/>
                                    <field name="name"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_tax"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <div class="oe_subtotal_footer_separator oe_inline">
                                    <label for="amount_total"/>
                                </div>
                                <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <field name="note" class="oe_inline" placeholder="Define your terms and conditions ..."/>
                            <div class="oe_clear"/>
                        </page>
                        <page string="Picking" name="picking_information">
                            <group>
                                <group>
                                    <field name="date_out" options='{"always_reload": True}'/>
                                    <field name="date_in" options='{"always_reload": True}'/>
                                </group>
                                <group>
                                    <field name="pick_method" options='{"always_reload": True}'
                                           string="Picking method"/>
                                    <field name="assembly_method" options='{"always_reload": True}'
                                           string="Assembly method"/>
                                </group>
                            </group>
                        </page>
                        <page string="More info">
                            <group>
                                <group string="Event details">
                                    <field name="event_name" string="Name"/>
                                    <field name="event_adress" string="Adress"/>
                                    <field name="event_zip" string="ZIP"/>
                                    <field name="event_city" string="City"/>
                                </group>
                                <group string="Comments" height="100%">
                                    <div height="100%">
                                        <field name="comment" height="100%"/>
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="odooloc_rental_order_tree" model="ir.ui.view">
        <field name="name">odooloc.order.tree</field>
        <field name="model">odooloc.order</field>
        <field name="arch" type="xml">
            <tree decoration-muted="state=='cancel'" decoration-info="state in ('confirmed')" default_order='name desc'
                  string="Rental Order">
                <field name="name" string="Reference"/>
                <field name="partner_id"/>
                <field name="date_out"/>
                <field name="date_in"/>
                <field name="amount_total"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="odooloc_rental_orders">
        <field name="name">Rental orders</field>
        <field name="res_model">odooloc.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!--    Create custom view for equipment creation-->
    <record model="ir.actions.act_window" id="odooloc_equipments_creation">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>


    <!-- Insert the navigation menu -->
    <record model="ir.actions.act_window" id="odooloc_warehouses">
        <field name="name">Warehouses</field>
        <field name="res_model">stock.warehouse</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="odooloc_locations">
        <field name="name">Locations</field>
        <field name="res_model">stock.location</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="odooloc_products">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="odooloc_equipments">
        <field name="name">Equipments</field>
        <field name="res_model">maintenance.equipment</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="odooloc_purchases">
        <field name="name">Purchases</field>
        <field name="res_model">purchase.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="main_odooloc_menu" name="OdooLOC"/>

    <menuitem id="menu_rental" name="Rentals" parent="main_odooloc_menu" sequence="1"/>

    <menuitem id="menu_rental_orders" name="Rental orders" parent="menu_rental" action="odooloc_rental_orders"/>

    <menuitem id="menu_inventory" name="Inventory" parent="main_odooloc_menu"/>
    <menuitem id="menu_inventory_warehouses" name="Warehouses" parent="menu_inventory" action="odooloc_warehouses"/>
    <menuitem id="menu_inventory_locations" name="Locations" parent="menu_inventory" action="odooloc_locations"/>

    <menuitem id="menu_products" name="Products" parent="main_odooloc_menu"/>
    <menuitem id="menu_products_products" name="Products" parent="menu_products" action="odooloc_products"/>
    <menuitem id="menu_products_equipments" name="Equipments" parent="menu_products" action="odooloc_equipments"/>

    <menuitem id="menu_purchases" name="Purchases" parent="main_odooloc_menu"/>
    <menuitem id="menu_purchases_orders" name="Purchase orders" parent="menu_purchases" action="odooloc_purchases"/>
</odoo>
